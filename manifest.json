{
  "manifest_version": 3,
  "name": "Show Password Toggle",
  "version": "1.0",
  "description": "Toggle visibility of password fields with a single click.",
  "permissions": ["scripting", "activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "128": "icons/icon128-off.png"
    }
  },
  "icons": {
    "128": "icons/icon128-off.png"
  }
}
